---
import AnimatedText from "@/components/ui/AnimatedText.astro";
import ParallaxSection from "@/components/ui/ParallaxSection.astro";
import works from "@/data/works";
---

<ParallaxSection id="works" class="mx-auto max-w-6xl px-6 py-24 sm:py-32" speed={0.3}>
  <AnimatedText 
    text="Works" 
    as="h2" 
    class="text-2xl sm:text-3xl font-semibold mb-8"
    type="words"
  />
  <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
    {works.map((p) => (
      <a href={`/works/${p.slug}`} class="group rounded-xl border border-neutral-800/80 bg-neutral-900/40 p-5 hover:border-neutral-600 transition-colors" data-animate="fade-up">
        <div class="flex items-start justify-between">
          <h3 class="font-semibold text-lg">{p.title}</h3>
          <span class="text-xs text-neutral-400">{p.year}</span>
        </div>
        <p class="mt-2 text-neutral-300 text-sm">{p.description}</p>
        <div class="mt-4 flex flex-wrap gap-2">
          {p.tech.map((t) => (
            <span class="px-2.5 py-1 rounded bg-neutral-800/70 text-neutral-300 text-xs">{t}</span>
          ))}
        </div>
      </a>
    ))}
  </div>
</ParallaxSection>

