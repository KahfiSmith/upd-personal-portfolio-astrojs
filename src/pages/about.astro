---
import SiteLayout from "@/layouts/SiteLayout.astro";
import techOrbit from "@/scripts/tech-orbit.ts?url";
import drivesAnimations from "@/scripts/drives-me-animations.ts?url";
---

<SiteLayout
  title="Kahfi Smith â€” About Me"
  description="Learn more about my journey, experiences, and what drives my passion for frontend development."
>
  <main class="min-h-screen relative">
    <!-- Subtle Background Elements -->
    <div aria-hidden="true" class="fixed inset-0 -z-10">
      <div
        class="absolute top-1/4 right-1/4 w-64 h-64 bg-gradient-to-br from-orange-100/30 to-pink-100/30 rounded-full blur-3xl"
      >
      </div>
      <div
        class="absolute bottom-1/4 left-1/3 w-48 h-48 bg-gradient-to-br from-blue-100/20 to-purple-100/20 rounded-full blur-3xl"
      >
      </div>
    </div>

    <!-- Hero Section with Asymmetric Layout -->
    <section class="relative py-16 md:py-24">
      <div class="max-w-7xl mx-auto px-6 md:px-8">
        <!-- Hero Header -->
        <div class="max-w-full mb-20">
          <div class="space-y-6">
            <div data-animate="fade-up" class="space-y-8">
              <h1
                class="font-display text-charcoal text-5xl sm:text-6xl md:text-7xl lg:text-8xl leading-[0.9] font-light"
              >
                Behind
                <span
                  class="block font-medium bg-gradient-to-r from-black via-cyan-500 to-black bg-clip-text text-transparent"
                >
                  the Code
                </span>
              </h1>
              <!-- Underline decoration -->
              <div
                class="w-full h-1 bg-gradient-to-r from-charcoal via-cyan-500 to-charcoal rounded-full"
              >
              </div>
            </div>
          </div>
        </div>

        <!-- Main Content Grid -->
        <div class="grid lg:grid-cols-12 gap-16 lg:gap-20 mb-32">
          <!-- Left Column - Story -->
          <div class="lg:col-span-7 space-y-12">
            <!-- Simple Introduction Card -->
            <div data-animate="fade-up" data-delay="0.2" class="group">
              <div class="space-y-6">
                <div
                  class="space-y-6 text-charcoal/80 text-lg md:text-2xl lg:text-2xl leading-relaxed"
                >
                  <p>
                    I'm a frontend web developer who believes that great user
                    experiences are born from the intersection of beautiful
                    design and performant code. My journey started with
                    curiosity about how websites work, and it has evolved into a
                    passion for creating digital experiences that feel both
                    functional and magical.
                  </p>
                  <p>
                    When I'm not crafting interfaces, you'll find me exploring
                    new web technologies, contributing to open source, or
                    enjoying a good cup of coffee while sketching ideas for my
                    next project.
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Right Column - Interactive Tech Stack -->
          <div class="lg:col-span-5">
            <div data-animate="fade-up" data-delay="0.4" class="sticky top-24">
              <div
                class="relative mx-auto w-80 h-80 md:w-96 md:h-96 overflow-visible"
                data-tech-orbit
              >
                <!-- Center Hub -->
                <div
                  data-orbit-center
                  class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 w-20 h-20 group"
                >
                  <!-- Outer glow ring -->
                  <div
                    class="w-full h-full rounded-full absolute inset-0 bg-gradient-to-r from-cyan-400/20 to-blue-500/20 blur-sm scale-110"
                  >
                  </div>

                  <!-- Main center circle -->
                  <div
                    class="relative w-full h-full rounded-full bg-gradient-to-br from-gray-800 via-gray-700 to-gray-900 border border-gray-600/50 shadow-xl flex items-center justify-center transition-all duration-300 group-hover:scale-105 group-hover:shadow-2xl"
                  >
                    <!-- Inner highlight -->
                    <div
                      class="absolute inset-1 rounded-full bg-gradient-to-br from-white/10 to-transparent"
                    >
                    </div>

                    <!-- Center icon/symbol -->
                    <div
                      class="relative z-10 w-8 h-8 flex items-center justify-center"
                    >
                      <div
                        class="w-3 h-3 rounded-full bg-gradient-to-br from-cyan-400 to-blue-500 shadow-lg animate-pulse"
                      >
                      </div>
                      <!-- Orbital rings -->
                      <div
                        class="absolute inset-0 border border-cyan-400/30 rounded-full animate-spin"
                        style="animation-duration: 8s;"
                      >
                      </div>
                      <div
                        class="absolute inset-1 border border-blue-400/20 rounded-full animate-spin"
                        style="animation-duration: 12s; animation-direction: reverse;"
                      >
                      </div>
                    </div>

                    <!-- Connecting lines to orbit items (subtle) -->
                    <div class="absolute inset-0 opacity-30">
                      <div
                        class="absolute top-0 left-1/2 w-px h-8 bg-gradient-to-t from-cyan-400/50 to-transparent -translate-x-1/2 -translate-y-8"
                      >
                      </div>
                      <div
                        class="absolute bottom-0 left-1/2 w-px h-8 bg-gradient-to-b from-cyan-400/50 to-transparent -translate-x-1/2 translate-y-8"
                      >
                      </div>
                      <div
                        class="absolute left-0 top-1/2 h-px w-8 bg-gradient-to-l from-cyan-400/50 to-transparent -translate-y-1/2 -translate-x-8"
                      >
                      </div>
                      <div
                        class="absolute right-0 top-1/2 h-px w-8 bg-gradient-to-r from-cyan-400/50 to-transparent -translate-y-1/2 translate-x-8"
                      >
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Tech Icons -->
                <div class="absolute left-1/2 top-1/2" data-tech-item>
                  <div
                    class="w-16 h-16 rounded-full bg-charcoal border border-charcoal/10 flex items-center justify-center shadow-sm hover:shadow-md transition-shadow"
                  >
                    <img
                      src="/icons/react.svg"
                      alt="React"
                      class="w-10 h-10"
                      loading="eager"
                    />
                  </div>
                </div>
                <div class="absolute left-1/2 top-1/2" data-tech-item>
                  <div
                    class="w-16 h-16 rounded-full bg-charcoal border border-charcoal/10 flex items-center justify-center shadow-sm hover:shadow-md transition-shadow"
                  >
                    <img
                      src="/icons/nextjs.svg"
                      alt="Next.js"
                      class="w-10 h-10"
                      loading="eager"
                    />
                  </div>
                </div>
                <div class="absolute left-1/2 top-1/2" data-tech-item>
                  <div
                    class="w-16 h-16 rounded-full bg-charcoal border border-charcoal/10 flex items-center justify-center shadow-sm hover:shadow-md transition-shadow"
                  >
                    <img
                      src="/icons/express.svg"
                      alt="Express"
                      class="w-10 h-10"
                      loading="eager"
                    />
                  </div>
                </div>
                <div class="absolute left-1/2 top-1/2" data-tech-item>
                  <div
                    class="w-16 h-16 rounded-full bg-charcoal border border-charcoal/10 flex items-center justify-center shadow-sm hover:shadow-md transition-shadow"
                  >
                    <img
                      src="/icons/mysql-icon.svg"
                      alt="MySQL"
                      class="w-10 h-10"
                      loading="eager"
                    />
                  </div>
                </div>
                <div class="absolute left-1/2 top-1/2" data-tech-item>
                  <div
                    class="w-16 h-16 rounded-full bg-charcoal border border-charcoal/10 flex items-center justify-center shadow-sm hover:shadow-md transition-shadow"
                  >
                    <img
                      src="/icons/postgresql.svg"
                      alt="PostgreSQL"
                      class="w-10 h-10"
                      loading="eager"
                    />
                  </div>
                </div>
                <div class="absolute left-1/2 top-1/2" data-tech-item>
                  <div
                    class="w-16 h-16 rounded-full bg-charcoal border border-charcoal/10 flex items-center justify-center shadow-sm hover:shadow-md transition-shadow"
                  >
                    <img
                      src="/icons/nodejs-icon-alt.svg"
                      alt="Node.js"
                      class="w-10 h-10"
                      loading="eager"
                    />
                  </div>
                </div>
                <div class="absolute left-1/2 top-1/2" data-tech-item>
                  <div
                    class="w-16 h-16 rounded-full bg-charcoal border border-charcoal/10 flex items-center justify-center shadow-sm hover:shadow-md transition-shadow"
                  >
                    <img
                      src="/icons/tailwindcss-icon.svg"
                      alt="Tailwind"
                      class="w-10 h-10"
                      loading="eager"
                    />
                  </div>
                </div>
                <div class="absolute left-1/2 top-1/2" data-tech-item>
                  <div
                    class="w-16 h-16 rounded-full bg-charcoal border border-charcoal/10 flex items-center justify-center shadow-sm hover:shadow-md transition-shadow"
                  >
                    <img
                      src="/icons/git-icon.svg"
                      alt="Git"
                      class="w-10 h-10"
                      loading="eager"
                    />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- What Drives Me Section -->
        <div data-animate="fade-up" data-delay="0.3" class="space-y-20 lg:space-y-24">
          <!-- Section Header -->
          <div class="text-center space-y-8">
            <h3 class="font-display text-charcoal text-4xl md:text-5xl lg:text-6xl font-light" data-drives-title>
              What Drives Me
            </h3>
            <div class="flex items-center justify-center">
              <div class="flex-1 h-px bg-gradient-to-r from-transparent via-charcoal/40 to-charcoal/60"></div>
              <div class="px-6">
                <div class="w-2 h-2 rounded-full bg-charcoal/70 shadow-sm"></div>
              </div>
              <div class="flex-1 h-px bg-gradient-to-l from-transparent via-charcoal/40 to-charcoal/60"></div>
            </div>
          </div>

          <!-- Vertical Layout - One per Row -->
          <div class="max-w-6xl mx-auto space-y-16 lg:space-y-20" data-drives-container>
            
            <!-- Problem Solving Row -->
            <div class="drives-item group" data-drives-item="1">
              <div class="py-8 md:py-12">
                <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12 items-center">
                  
                  <!-- Left: Number & Title -->
                  <div class="lg:col-span-5 space-y-6">
                    <div class="flex items-center gap-6">
                      <!-- Large Number -->
                      <div class="relative drives-number">
                        <span class="font-display text-6xl md:text-7xl lg:text-8xl font-light text-charcoal/20">01</span>
                        <div class="absolute inset-0 font-display text-6xl md:text-7xl lg:text-8xl font-light bg-gradient-to-br from-cyan-400 to-blue-500 bg-clip-text text-transparent opacity-0 drives-number-gradient">01</div>
                      </div>
                      
                      <!-- Vertical Line -->
                      <div class="w-px h-16 bg-charcoal/20 drives-divider"></div>
                      
                      <!-- Title -->
                      <div class="space-y-2">
                        <h4 class="font-display text-2xl md:text-3xl lg:text-4xl text-charcoal drives-title">
                          Problem Solving
                        </h4>
                        <div class="w-0 h-1 bg-gradient-to-r from-cyan-400 to-blue-500 rounded-full drives-underline"></div>
                      </div>
                    </div>
                  </div>
                  
                  <!-- Right: Description -->
                  <div class="lg:col-span-7">
                    <p class="text-charcoal/70 text-lg md:text-xl lg:text-2xl leading-relaxed drives-description">
                      Every project is a puzzle waiting to be solved. I thrive on breaking down complex challenges into manageable solutions, finding elegant ways to turn ideas into reality through thoughtful architecture and innovative thinking.
                    </p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Continuous Learning Row -->
            <div class="drives-item group" data-drives-item="2">
              <div class="py-8 md:py-12">
                <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12 items-center">
                  
                  <!-- Left: Description (Reverse Order for Variation) -->
                  <div class="lg:col-span-7 order-2 lg:order-1">
                    <p class="text-charcoal/70 text-lg md:text-xl lg:text-2xl leading-relaxed drives-description">
                      Technology evolves rapidly, and staying curious keeps me ahead. Whether it's exploring new frameworks, design patterns, or emerging web standards, I'm always expanding my toolkit to deliver better solutions.
                    </p>
                  </div>
                  
                  <!-- Right: Number & Title -->
                  <div class="lg:col-span-5 order-1 lg:order-2">
                    <div class="flex items-center gap-6 justify-end lg:justify-start flex-row-reverse lg:flex-row">
                      <!-- Title -->
                      <div class="space-y-2 text-right lg:text-left">
                        <h4 class="font-display text-2xl md:text-3xl lg:text-4xl text-charcoal drives-title">
                          Continuous Learning
                        </h4>
                        <div class="w-0 h-1 bg-gradient-to-r from-emerald-400 to-teal-500 rounded-full drives-underline ml-auto lg:ml-0"></div>
                      </div>
                      
                      <!-- Vertical Line -->
                      <div class="w-px h-16 bg-charcoal/20 drives-divider"></div>
                      
                      <!-- Large Number -->
                      <div class="relative drives-number">
                        <span class="font-display text-6xl md:text-7xl lg:text-8xl font-light text-charcoal/20">02</span>
                        <div class="absolute inset-0 font-display text-6xl md:text-7xl lg:text-8xl font-light bg-gradient-to-br from-emerald-400 to-teal-500 bg-clip-text text-transparent opacity-0 drives-number-gradient">02</div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- User Impact Row -->
            <div class="drives-item group" data-drives-item="3">
              <div class="py-8 md:py-12">
                <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12 items-center">
                  
                  <!-- Left: Number & Title -->
                  <div class="lg:col-span-5 space-y-6">
                    <div class="flex items-center gap-6">
                      <!-- Large Number -->
                      <div class="relative drives-number">
                        <span class="font-display text-6xl md:text-7xl lg:text-8xl font-light text-charcoal/20">03</span>
                        <div class="absolute inset-0 font-display text-6xl md:text-7xl lg:text-8xl font-light bg-gradient-to-br from-purple-400 to-pink-500 bg-clip-text text-transparent opacity-0 drives-number-gradient">03</div>
                      </div>
                      
                      <!-- Vertical Line -->
                      <div class="w-px h-16 bg-charcoal/20 drives-divider"></div>
                      
                      <!-- Title -->
                      <div class="space-y-2">
                        <h4 class="font-display text-2xl md:text-3xl lg:text-4xl text-charcoal drives-title">
                          User Impact
                        </h4>
                        <div class="w-0 h-1 bg-gradient-to-r from-purple-400 to-pink-500 rounded-full drives-underline"></div>
                      </div>
                    </div>
                  </div>
                  
                  <!-- Right: Description -->
                  <div class="lg:col-span-7">
                    <p class="text-charcoal/70 text-lg md:text-xl lg:text-2xl leading-relaxed drives-description">
                      Behind every click is a real person with real needs. I'm passionate about creating experiences that make people's lives easier, more productive, and more enjoyable. User satisfaction is my ultimate success metric.
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

    

  <script type="module" src={techOrbit}></script>
  <script type="module" src={drivesAnimations}></script>
</SiteLayout>
