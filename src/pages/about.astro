---
import SiteLayout from "@/layouts/SiteLayout.astro";
import techOrbit from "@/scripts/tech-orbit.ts?url";
---

<SiteLayout
  title="Kahfi Smith — About Me"
  description="Learn more about my journey, experiences, and what drives my passion for frontend development."
>
  <main class="min-h-screen relative overflow-hidden">
    <!-- Subtle Background Elements -->
    <div aria-hidden="true" class="fixed inset-0 -z-10">
      <div
        class="absolute top-1/4 right-1/4 w-64 h-64 bg-gradient-to-br from-orange-100/30 to-pink-100/30 rounded-full blur-3xl"
      >
      </div>
      <div
        class="absolute bottom-1/4 left-1/3 w-48 h-48 bg-gradient-to-br from-blue-100/20 to-purple-100/20 rounded-full blur-3xl"
      >
      </div>
    </div>

    <!-- Hero Section with Asymmetric Layout -->
    <section class="relative py-16 md:py-24">
      <div class="max-w-7xl mx-auto px-6 md:px-8">
        <!-- Hero Header -->
        <div class="max-w-full mb-20">
          <div class="space-y-6">
            <div data-animate="fade-up" class="space-y-8">
              <h1
                class="font-display text-charcoal text-5xl sm:text-6xl md:text-7xl lg:text-8xl leading-[0.9] font-light"
              >
                Behind
                <span
                  class="block font-medium bg-gradient-to-r from-black via-cyan-500 to-black bg-clip-text text-transparent"
                >
                  the Code
                </span>
              </h1>
              <!-- Underline decoration -->
              <div
                class="w-full h-1 bg-gradient-to-r from-charcoal via-cyan-500 to-charcoal rounded-full"
              >
              </div>
            </div>
          </div>
        </div>

        <!-- Main Content Grid -->
        <div class="grid lg:grid-cols-12 gap-16 lg:gap-20 mb-20">
          <!-- Left Column - Story -->
          <div class="lg:col-span-7 space-y-12">
            <!-- Simple Introduction Card -->
            <div data-animate="fade-up" data-delay="0.2" class="group">
              <div class="space-y-6">
                <div
                  class="space-y-6 text-charcoal/80 text-lg md:text-2xl lg:text-2xl leading-relaxed"
                >
                  <p>
                    I'm a frontend web developer who believes that great user
                    experiences are born from the intersection of beautiful
                    design and performant code. My journey started with
                    curiosity about how websites work, and it has evolved into a
                    passion for creating digital experiences that feel both
                    functional and magical.
                  </p>
                  <p>
                    When I'm not crafting interfaces, you'll find me exploring
                    new web technologies, contributing to open source, or
                    enjoying a good cup of coffee while sketching ideas for my
                    next project.
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Right Column - Interactive Tech Stack -->
          <div class="lg:col-span-5">
            <div data-animate="fade-up" data-delay="0.4" class="sticky top-24">
              <div
                class="relative mx-auto w-80 h-80 md:w-96 md:h-96 overflow-visible"
                data-tech-orbit
              >
                <!-- Center Hub -->
                <div
                  data-orbit-center
                  class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 w-20 h-20 group"
                >
                  <!-- Outer glow ring -->
                  <div
                    class="w-full h-full rounded-full absolute inset-0 bg-gradient-to-r from-cyan-400/20 to-blue-500/20 blur-sm scale-110"
                  >
                  </div>

                  <!-- Main center circle -->
                  <div
                    class="relative w-full h-full rounded-full bg-gradient-to-br from-gray-800 via-gray-700 to-gray-900 border border-gray-600/50 shadow-xl flex items-center justify-center transition-all duration-300 group-hover:scale-105 group-hover:shadow-2xl"
                  >
                    <!-- Inner highlight -->
                    <div
                      class="absolute inset-1 rounded-full bg-gradient-to-br from-white/10 to-transparent"
                    >
                    </div>

                    <!-- Center icon/symbol -->
                    <div
                      class="relative z-10 w-8 h-8 flex items-center justify-center"
                    >
                      <div
                        class="w-3 h-3 rounded-full bg-gradient-to-br from-cyan-400 to-blue-500 shadow-lg animate-pulse"
                      >
                      </div>
                      <!-- Orbital rings -->
                      <div
                        class="absolute inset-0 border border-cyan-400/30 rounded-full animate-spin"
                        style="animation-duration: 8s;"
                      >
                      </div>
                      <div
                        class="absolute inset-1 border border-blue-400/20 rounded-full animate-spin"
                        style="animation-duration: 12s; animation-direction: reverse;"
                      >
                      </div>
                    </div>

                    <!-- Connecting lines to orbit items (subtle) -->
                    <div class="absolute inset-0 opacity-30">
                      <div
                        class="absolute top-0 left-1/2 w-px h-8 bg-gradient-to-t from-cyan-400/50 to-transparent -translate-x-1/2 -translate-y-8"
                      >
                      </div>
                      <div
                        class="absolute bottom-0 left-1/2 w-px h-8 bg-gradient-to-b from-cyan-400/50 to-transparent -translate-x-1/2 translate-y-8"
                      >
                      </div>
                      <div
                        class="absolute left-0 top-1/2 h-px w-8 bg-gradient-to-l from-cyan-400/50 to-transparent -translate-y-1/2 -translate-x-8"
                      >
                      </div>
                      <div
                        class="absolute right-0 top-1/2 h-px w-8 bg-gradient-to-r from-cyan-400/50 to-transparent -translate-y-1/2 translate-x-8"
                      >
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Tech Icons -->
                <div class="absolute left-1/2 top-1/2" data-tech-item>
                  <div
                    class="w-16 h-16 rounded-full bg-charcoal border border-charcoal/10 flex items-center justify-center shadow-sm hover:shadow-md transition-shadow"
                  >
                    <img
                      src="/icons/react.svg"
                      alt="React"
                      class="w-10 h-10"
                      loading="eager"
                    />
                  </div>
                </div>
                <div class="absolute left-1/2 top-1/2" data-tech-item>
                  <div
                    class="w-16 h-16 rounded-full bg-charcoal border border-charcoal/10 flex items-center justify-center shadow-sm hover:shadow-md transition-shadow"
                  >
                    <img
                      src="/icons/nextjs.svg"
                      alt="Next.js"
                      class="w-10 h-10"
                      loading="eager"
                    />
                  </div>
                </div>
                <div class="absolute left-1/2 top-1/2" data-tech-item>
                  <div
                    class="w-16 h-16 rounded-full bg-charcoal border border-charcoal/10 flex items-center justify-center shadow-sm hover:shadow-md transition-shadow"
                  >
                    <img
                      src="/icons/express.svg"
                      alt="Express"
                      class="w-10 h-10"
                      loading="eager"
                    />
                  </div>
                </div>
                <div class="absolute left-1/2 top-1/2" data-tech-item>
                  <div
                    class="w-16 h-16 rounded-full bg-charcoal border border-charcoal/10 flex items-center justify-center shadow-sm hover:shadow-md transition-shadow"
                  >
                    <img
                      src="/icons/mysql-icon.svg"
                      alt="MySQL"
                      class="w-10 h-10"
                      loading="eager"
                    />
                  </div>
                </div>
                <div class="absolute left-1/2 top-1/2" data-tech-item>
                  <div
                    class="w-16 h-16 rounded-full bg-charcoal border border-charcoal/10 flex items-center justify-center shadow-sm hover:shadow-md transition-shadow"
                  >
                    <img
                      src="/icons/postgresql.svg"
                      alt="PostgreSQL"
                      class="w-10 h-10"
                      loading="eager"
                    />
                  </div>
                </div>
                <div class="absolute left-1/2 top-1/2" data-tech-item>
                  <div
                    class="w-16 h-16 rounded-full bg-charcoal border border-charcoal/10 flex items-center justify-center shadow-sm hover:shadow-md transition-shadow"
                  >
                    <img
                      src="/icons/nodejs-icon-alt.svg"
                      alt="Node.js"
                      class="w-10 h-10"
                      loading="eager"
                    />
                  </div>
                </div>
                <div class="absolute left-1/2 top-1/2" data-tech-item>
                  <div
                    class="w-16 h-16 rounded-full bg-charcoal border border-charcoal/10 flex items-center justify-center shadow-sm hover:shadow-md transition-shadow"
                  >
                    <img
                      src="/icons/tailwindcss-icon.svg"
                      alt="Tailwind"
                      class="w-10 h-10"
                      loading="eager"
                    />
                  </div>
                </div>
                <div class="absolute left-1/2 top-1/2" data-tech-item>
                  <div
                    class="w-16 h-16 rounded-full bg-charcoal border border-charcoal/10 flex items-center justify-center shadow-sm hover:shadow-md transition-shadow"
                  >
                    <img
                      src="/icons/git-icon.svg"
                      alt="Git"
                      class="w-10 h-10"
                      loading="eager"
                    />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Bold Elegant Divider -->
        <div class="py-12 md:py-16" data-animate="fade-up" data-delay="0.25">
          <div class="max-w-4xl mx-auto">
            <!-- Strong Line with Center Accent -->
            <div class="flex items-center justify-center">
              <div class="flex-1 h-px bg-gradient-to-r from-transparent via-charcoal/40 to-charcoal/60"></div>
              <div class="px-6">
                <div class="w-2 h-2 rounded-full bg-charcoal/70 shadow-sm"></div>
              </div>
              <div class="flex-1 h-px bg-gradient-to-l from-transparent via-charcoal/40 to-charcoal/60"></div>
            </div>
          </div>
        </div>

        <!-- What Drives Me Section -->
        <div data-animate="fade-up" data-delay="0.3" class="space-y-16">
          <!-- Section Header -->
          <div class="text-center space-y-6">
            <h3 class="font-display text-charcoal text-2xl md:text-3xl">
              What Drives Me
            </h3>
            <div class="flex items-center justify-center gap-4">
              <div class="w-16 h-px bg-gradient-to-r from-transparent to-charcoal/20"></div>
              <div class="w-2 h-2 rounded-full bg-gradient-to-br from-cyan-400 to-blue-500"></div>
              <div class="w-16 h-px bg-gradient-to-l from-transparent to-charcoal/20"></div>
            </div>
          </div>

          <!-- Simple Three Column Layout -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-12 lg:gap-16">
            <!-- Problem Solving Column -->
            <div class="space-y-4">
              <!-- Simple Header -->
              <div class="flex items-center gap-3 mb-6">
                <span class="text-charcoal/50 text-xs font-mono">01</span>
                <div class="w-8 h-px bg-charcoal/20"></div>
                <h4 class="font-display text-charcoal text-lg md:text-xl">Problem Solving</h4>
              </div>
              
              <!-- Description -->
              <p class="text-charcoal/70 text-base leading-relaxed">
                Every project is a puzzle waiting to be solved. I thrive on breaking down complex challenges into manageable solutions, finding elegant ways to turn ideas into reality through thoughtful architecture and innovative thinking.
              </p>
            </div>

            <!-- Continuous Learning Column -->
            <div class="space-y-4">
              <!-- Simple Header -->
              <div class="flex items-center gap-3 mb-6">
                <span class="text-charcoal/50 text-xs font-mono">02</span>
                <div class="w-8 h-px bg-charcoal/20"></div>
                <h4 class="font-display text-charcoal text-lg md:text-xl">Continuous Learning</h4>
              </div>
              
              <!-- Description -->
              <p class="text-charcoal/70 text-base leading-relaxed">
                Technology evolves rapidly, and staying curious keeps me ahead. Whether it's exploring new frameworks, design patterns, or emerging web standards, I'm always expanding my toolkit to deliver better solutions.
              </p>
            </div>

            <!-- User Impact Column -->
            <div class="space-y-4">
              <!-- Simple Header -->
              <div class="flex items-center gap-3 mb-6">
                <span class="text-charcoal/50 text-xs font-mono">03</span>
                <div class="w-8 h-px bg-charcoal/20"></div>
                <h4 class="font-display text-charcoal text-lg md:text-xl">User Impact</h4>
              </div>
              
              <!-- Description -->
              <p class="text-charcoal/70 text-base leading-relaxed">
                Behind every click is a real person with real needs. I'm passionate about creating experiences that make people's lives easier, more productive, and more enjoyable. User satisfaction is my ultimate success metric.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Interactive Footer with Left-Right Layout -->
    <footer class="bg-charcoal text-cream py-12 md:py-16 overflow-hidden">
      <div class="max-w-6xl mx-auto px-6 md:px-8">
        
        <!-- Main Grid Layout: Left-Right -->
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-start" data-animate="fade-up" data-delay="0.2">
          
          <!-- Left Side: CTA Content -->
          <div class="space-y-8 text-left">
            <!-- Animated Heading -->
            <div class="relative">
              <h3 class="font-display text-cream text-2xl md:text-3xl lg:text-4xl mb-4 group">
                Let's Build Something 
                <span class="relative inline-block">
                  <span class="bg-gradient-to-r from-cyan-400 via-blue-400 to-purple-400 bg-clip-text text-transparent animate-pulse">
                    Amazing
                  </span>
                  <!-- Underline Animation -->
                  <div class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-cyan-400 to-purple-400 group-hover:w-full transition-all duration-700 ease-out"></div>
                </span>
              </h3>
              
              <!-- Floating particles -->
              <div class="absolute inset-0 pointer-events-none">
                <div class="absolute top-4 left-1/4 w-1 h-1 bg-cyan-400/30 rounded-full animate-bounce" style="animation-delay: 0.5s;"></div>
                <div class="absolute top-8 right-1/3 w-1 h-1 bg-purple-400/30 rounded-full animate-bounce" style="animation-delay: 1s;"></div>
                <div class="absolute -top-2 right-1/4 w-1 h-1 bg-blue-400/30 rounded-full animate-bounce" style="animation-delay: 1.5s;"></div>
              </div>
            </div>
            
            <!-- Description -->
            <p class="text-cream/70 text-base md:text-lg leading-relaxed max-w-lg transform transition-all duration-500 hover:text-cream/90">
              I'm always excited to collaborate on interesting projects and bring creative ideas to life. Let's create something extraordinary together.
            </p>
            
            <!-- CTA Buttons -->
            <div class="flex flex-col sm:flex-row items-start gap-4 pt-2">
              <a
                href="/works"
                class="group relative inline-flex items-center gap-2 px-6 py-3 bg-cream text-charcoal rounded-full transition-all duration-300 hover:shadow-lg hover:shadow-cream/20 hover:scale-105 overflow-hidden"
              >
                <!-- Button shine effect -->
                <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>
                
                <span class="relative z-10">View My Work</span>
                <svg class="relative z-10 w-4 h-4 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </a>
              
              <a
                href="mailto:hello@kahfismith.dev"
                class="group relative inline-flex items-center gap-2 px-6 py-3 rounded-full border-2 border-cream/30 text-cream hover:border-cream hover:bg-cream/5 transition-all duration-300 hover:scale-105"
              >
                <!-- Border glow effect -->
                <div class="absolute inset-0 rounded-full bg-gradient-to-r from-cyan-400/0 via-cyan-400/20 to-cyan-400/0 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                
                <span class="relative z-10">Get in Touch</span>
              </a>
            </div>
          </div>

          <!-- Right Side: Contact Info & Social -->
          <div class="space-y-8 text-left lg:text-right" data-animate="fade-up" data-delay="0.4">
            
            <!-- Contact Information -->
            <div class="space-y-6">
              <div>
                <h4 class="font-display text-cream text-lg md:text-xl mb-3 group">
                  <span class="relative">
                    Let's Connect
                    <div class="absolute -bottom-1 right-0 lg:right-0 left-0 lg:left-auto w-0 h-0.5 bg-gradient-to-r from-purple-400 to-cyan-400 group-hover:w-full transition-all duration-500 ease-out"></div>
                  </span>
                </h4>
                <div class="space-y-2 text-cream/70">
                  <p class="hover:text-cream/90 transition-colors duration-300">
                    <span class="text-cream/50 text-sm font-mono mr-2">Email:</span>
                    <a href="mailto:hello@kahfismith.dev" class="hover:underline">hello@kahfismith.dev</a>
                  </p>
                  <p class="hover:text-cream/90 transition-colors duration-300">
                    <span class="text-cream/50 text-sm font-mono mr-2">Location:</span>
                    Nganjuk, Indonesia
                  </p>
                  <p class="hover:text-cream/90 transition-colors duration-300">
                    <span class="text-cream/50 text-sm font-mono mr-2">Status:</span>
                    Available for projects
                  </p>
                </div>
              </div>
            </div>

            <!-- Social Links -->
            <div class="space-y-4">
              <h5 class="text-cream/80 font-medium text-sm tracking-wide uppercase">Follow Me</h5>
              <div class="flex items-center justify-start lg:justify-end gap-4">
                <a 
                  href="https://github.com/kahfismith" 
                  class="group relative p-2 text-cream/60 hover:text-cream transition-all duration-300 hover:scale-110"
                  aria-label="GitHub Profile"
                >
                  <div class="absolute inset-0 bg-cream/10 rounded-full scale-0 group-hover:scale-100 transition-transform duration-300"></div>
                  <svg class="relative z-10 w-5 h-5 group-hover:rotate-12 transition-transform duration-300" fill="currentColor" viewBox="0 0 24 24">
