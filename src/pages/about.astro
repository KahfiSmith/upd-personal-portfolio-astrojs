---
import SiteLayout from "@/layouts/SiteLayout.astro";
import techOrbit from "@/scripts/tech-orbit.ts?url";
import drivesAnimations from "@/scripts/drives-me-animations.ts?url";
---

<SiteLayout
  title="Kahfi Smith â€” About Me"
  description="Learn more about my journey, experiences, and what drives my passion for frontend development."
>
  <main class="min-h-screen relative">
    <!-- Subtle Background Elements -->
    <div aria-hidden="true" class="fixed inset-0 -z-10">
      <div
        class="absolute top-1/4 right-1/4 w-64 h-64 bg-gradient-to-br from-orange-100/30 to-pink-100/30 rounded-full blur-3xl"
      >
      </div>
      <div
        class="absolute bottom-1/4 left-1/3 w-48 h-48 bg-gradient-to-br from-blue-100/20 to-purple-100/20 rounded-full blur-3xl"
      >
      </div>
    </div>

    <!-- Hero Section with Asymmetric Layout -->
    <section class="relative py-16 md:py-24">
      <div class="max-w-7xl mx-auto px-6 md:px-8">
        <!-- Hero Header -->
        <div class="max-w-full mb-20">
          <div class="space-y-6">
            <div data-animate="fade-up" class="space-y-8">
              <h1
                class="font-display text-charcoal text-5xl sm:text-6xl md:text-7xl lg:text-8xl leading-[0.9] font-light"
              >
                Behind
                <span
                  class="block font-medium bg-gradient-to-r from-black via-cyan-500 to-black bg-clip-text text-transparent"
                >
                  the Code
                </span>
              </h1>
              <!-- Underline decoration -->
              <div
                class="w-full h-1 bg-gradient-to-r from-charcoal via-cyan-500 to-charcoal rounded-full"
              >
              </div>
            </div>
          </div>
        </div>

        <!-- Main Content Grid -->
        <div class="grid lg:grid-cols-12 gap-16 lg:gap-20 mb-32">
          <!-- Left Column - Story -->
          <div class="lg:col-span-7 space-y-12">
            <!-- Simple Introduction Card -->
            <div data-animate="fade-up" data-delay="0.2" class="group">
              <div class="space-y-6">
                <div
                  class="space-y-6 text-charcoal/80 text-lg md:text-2xl lg:text-2xl leading-relaxed"
                >
                  <p>
                    I'm a frontend web developer who believes that great user
                    experiences are born from the intersection of beautiful
                    design and performant code. My journey started with
                    curiosity about how websites work, and it has evolved into a
                    passion for creating digital experiences that feel both
                    functional and magical.
                  </p>
                  <p>
                    When I'm not crafting interfaces, you'll find me exploring
                    new web technologies, contributing to open source, or
                    enjoying a good cup of coffee while sketching ideas for my
                    next project.
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Right Column - Interactive Tech Stack -->
          <div class="lg:col-span-5">
            <div data-animate="fade-up" data-delay="0.4" class="sticky top-24">
              <div
                class="relative mx-auto w-80 h-80 md:w-96 md:h-96 overflow-visible"
                data-tech-orbit
              >
                <!-- Center Hub -->
                <div
                  data-orbit-center
                  class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 w-20 h-20 group"
                >
                  <!-- Outer glow ring -->
                  <div
                    class="w-full h-full rounded-full absolute inset-0 bg-gradient-to-r from-cyan-400/20 to-blue-500/20 blur-sm scale-110"
                  >
                  </div>

                  <!-- Main center circle -->
                  <div
                    class="relative w-full h-full rounded-full bg-gradient-to-br from-gray-800 via-gray-700 to-gray-900 border border-gray-600/50 shadow-xl flex items-center justify-center transition-all duration-300 group-hover:scale-105 group-hover:shadow-2xl"
                  >
                    <!-- Inner highlight -->
                    <div
                      class="absolute inset-1 rounded-full bg-gradient-to-br from-white/10 to-transparent"
                    >
                    </div>

                    <!-- Center icon/symbol -->
                    <div
                      class="relative z-10 w-8 h-8 flex items-center justify-center"
                    >
                      <div
                        class="w-3 h-3 rounded-full bg-gradient-to-br from-cyan-400 to-blue-500 shadow-lg animate-pulse"
                      >
                      </div>
                      <!-- Orbital rings -->
                      <div
                        class="absolute inset-0 border border-cyan-400/30 rounded-full animate-spin"
                        style="animation-duration: 8s;"
                      >
                      </div>
                      <div
                        class="absolute inset-1 border border-blue-400/20 rounded-full animate-spin"
                        style="animation-duration: 12s; animation-direction: reverse;"
                      >
                      </div>
                    </div>

                    <!-- Connecting lines to orbit items (subtle) -->
                    <div class="absolute inset-0 opacity-30">
                      <div
                        class="absolute top-0 left-1/2 w-px h-8 bg-gradient-to-t from-cyan-400/50 to-transparent -translate-x-1/2 -translate-y-8"
                      >
                      </div>
                      <div
                        class="absolute bottom-0 left-1/2 w-px h-8 bg-gradient-to-b from-cyan-400/50 to-transparent -translate-x-1/2 translate-y-8"
                      >
                      </div>
                      <div
                        class="absolute left-0 top-1/2 h-px w-8 bg-gradient-to-l from-cyan-400/50 to-transparent -translate-y-1/2 -translate-x-8"
                      >
                      </div>
                      <div
                        class="absolute right-0 top-1/2 h-px w-8 bg-gradient-to-r from-cyan-400/50 to-transparent -translate-y-1/2 translate-x-8"
                      >
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Tech Icons -->
                <div class="absolute left-1/2 top-1/2" data-tech-item>
                  <div
                    class="w-16 h-16 rounded-full bg-charcoal border border-charcoal/10 flex items-center justify-center shadow-sm hover:shadow-md transition-shadow"
                  >
                    <img
                      src="/icons/react.svg"
                      alt="React"
                      class="w-10 h-10"
                      loading="eager"
                    />
                  </div>
                </div>
                <div class="absolute left-1/2 top-1/2" data-tech-item>
                  <div
                    class="w-16 h-16 rounded-full bg-charcoal border border-charcoal/10 flex items-center justify-center shadow-sm hover:shadow-md transition-shadow"
                  >
                    <img
                      src="/icons/nextjs.svg"
                      alt="Next.js"
                      class="w-10 h-10"
                      loading="eager"
                    />
                  </div>
                </div>
                <div class="absolute left-1/2 top-1/2" data-tech-item>
                  <div
                    class="w-16 h-16 rounded-full bg-charcoal border border-charcoal/10 flex items-center justify-center shadow-sm hover:shadow-md transition-shadow"
                  >
                    <img
                      src="/icons/express.svg"
                      alt="Express"
                      class="w-10 h-10"
                      loading="eager"
                    />
                  </div>
                </div>
                <div class="absolute left-1/2 top-1/2" data-tech-item>
                  <div
                    class="w-16 h-16 rounded-full bg-charcoal border border-charcoal/10 flex items-center justify-center shadow-sm hover:shadow-md transition-shadow"
                  >
                    <img
                      src="/icons/mysql-icon.svg"
                      alt="MySQL"
                      class="w-10 h-10"
                      loading="eager"
                    />
                  </div>
                </div>
                <div class="absolute left-1/2 top-1/2" data-tech-item>
                  <div
                    class="w-16 h-16 rounded-full bg-charcoal border border-charcoal/10 flex items-center justify-center shadow-sm hover:shadow-md transition-shadow"
                  >
                    <img
                      src="/icons/postgresql.svg"
                      alt="PostgreSQL"
                      class="w-10 h-10"
                      loading="eager"
                    />
                  </div>
                </div>
                <div class="absolute left-1/2 top-1/2" data-tech-item>
                  <div
                    class="w-16 h-16 rounded-full bg-charcoal border border-charcoal/10 flex items-center justify-center shadow-sm hover:shadow-md transition-shadow"
                  >
                    <img
                      src="/icons/nodejs-icon-alt.svg"
                      alt="Node.js"
                      class="w-10 h-10"
                      loading="eager"
                    />
                  </div>
                </div>
                <div class="absolute left-1/2 top-1/2" data-tech-item>
                  <div
                    class="w-16 h-16 rounded-full bg-charcoal border border-charcoal/10 flex items-center justify-center shadow-sm hover:shadow-md transition-shadow"
                  >
                    <img
                      src="/icons/tailwindcss-icon.svg"
                      alt="Tailwind"
                      class="w-10 h-10"
                      loading="eager"
                    />
                  </div>
                </div>
                <div class="absolute left-1/2 top-1/2" data-tech-item>
                  <div
                    class="w-16 h-16 rounded-full bg-charcoal border border-charcoal/10 flex items-center justify-center shadow-sm hover:shadow-md transition-shadow"
                  >
                    <img
                      src="/icons/git-icon.svg"
                      alt="Git"
                      class="w-10 h-10"
                      loading="eager"
                    />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- What Drives Me Section -->
        <div data-animate="fade-up" data-delay="0.3" class="space-y-16">
          <!-- Section Header -->
          <div class="text-center space-y-6">
            <h3 class="font-display text-charcoal text-4xl md:text-5xl lg:text-6xl font-light" data-drives-title>
              What Drives Me
            </h3>
            <div class="w-24 h-1 bg-gradient-to-r from-cyan-400 to-blue-500 mx-auto rounded-full"></div>
          </div>

          <!-- Simple Card Layout -->
          <div class="max-w-5xl mx-auto grid md:grid-cols-3 gap-8" data-drives-container>
            
            <!-- Problem Solving Card -->
            <div class="drives-item group" data-drives-item="1">
              <div class="bg-white/60 backdrop-blur-sm rounded-2xl p-8 shadow-sm hover:shadow-lg transition-all duration-300 border border-gray-100/50 h-full">
                <div class="space-y-6">
                  <!-- Icon -->
                  <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-cyan-400 to-blue-500 flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                    </svg>
                  </div>
                  
                  <!-- Title -->
                  <h4 class="font-display text-2xl text-charcoal font-medium">
                    Problem Solving
                  </h4>
                  
                  <!-- Description -->
                  <p class="text-charcoal/70 leading-relaxed">
                    Every project is a puzzle waiting to be solved. I thrive on breaking down complex challenges into elegant solutions through thoughtful architecture.
                  </p>
                </div>
              </div>
            </div>

            <!-- Continuous Learning Card -->
            <div class="drives-item group" data-drives-item="2">
              <div class="bg-white/60 backdrop-blur-sm rounded-2xl p-8 shadow-sm hover:shadow-lg transition-all duration-300 border border-gray-100/50 h-full">
                <div class="space-y-6">
                  <!-- Icon -->
                  <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-emerald-400 to-teal-500 flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C20.168 18.477 18.582 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                    </svg>
                  </div>
                  
                  <!-- Title -->
                  <h4 class="font-display text-2xl text-charcoal font-medium">
                    Continuous Learning
                  </h4>
                  
                  <!-- Description -->
                  <p class="text-charcoal/70 leading-relaxed">
                    Technology evolves rapidly, and staying curious keeps me ahead. I'm always exploring new frameworks and expanding my toolkit.
                  </p>
                </div>
              </div>
            </div>

            <!-- User Impact Card -->
            <div class="drives-item group" data-drives-item="3">
              <div class="bg-white/60 backdrop-blur-sm rounded-2xl p-8 shadow-sm hover:shadow-lg transition-all duration-300 border border-gray-100/50 h-full">
                <div class="space-y-6">
                  <!-- Icon -->
                  <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-purple-400 to-pink-500 flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                    </svg>
                  </div>
                  
                  <!-- Title -->
                  <h4 class="font-display text-2xl text-charcoal font-medium">
                    User Impact
                  </h4>
                  
                  <!-- Description -->
                  <p class="text-charcoal/70 leading-relaxed">
                    Behind every click is a real person with real needs. I'm passionate about creating experiences that make people's lives easier and more enjoyable.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <script type="module" src={techOrbit}></script>
  <script type="module" src={drivesAnimations}></script>
</SiteLayout>
