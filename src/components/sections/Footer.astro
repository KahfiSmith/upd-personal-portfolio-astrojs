---
export type SocialName = 'github' | 'linkedin' | 'facebook' | 'instagram';

export interface SocialLink { name: SocialName; href: string }
export interface Button { label: string; href: string }
export interface Props {
  headlinePrefix?: string;
  headlineHighlight?: string;
  description?: string;
  primaryButton?: Button;
  secondaryButton?: Button;
  socials?: SocialLink[];
  copyright?: string;
  tagline?: string;
}

const {
  headlinePrefix = "Let's Build Something",
  headlineHighlight = "Amazing",
  description = "I'm always excited to collaborate on interesting projects and bring creative ideas to life. Let's create something extraordinary together.",
  primaryButton = { label: "View My Work", href: "/works" },
  secondaryButton = { label: "Get in Touch", href: "mailto:alkahfii2018@gmail.com" },
  socials = [
    { name: 'github', href: 'https://github.com/kahfismith' },
    { name: 'linkedin', href: 'https://www.linkedin.com/in/mohamad-al-kahfi-b48107271/' },
    { name: 'facebook', href: 'https://www.facebook.com/kahfi.smith.2025/' },
    { name: 'instagram', href: 'https://www.instagram.com/alkaahfi__/' },
  ],
  copyright = 'Portfolio 2025',
  tagline = 'Made with ❤️ and coffee',
} = Astro.props as Props;
---

<footer class="enhanced-footer relative bg-charcoal text-cream py-16 md:py-20 overflow-hidden">
  <!-- Animated Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="footer-grid absolute inset-0"></div>
    <div class="footer-particles absolute inset-0"></div>
  </div>
  
  <!-- Dynamic Gradient Overlay -->
  <div class="absolute inset-0 bg-gradient-to-br from-transparent via-cyan-500/5 to-purple-500/10 animate-pulse"></div>
  
  <!-- Floating Orbs -->
  <div class="absolute inset-0 pointer-events-none">
    <div class="floating-orb floating-orb-1"></div>
    <div class="floating-orb floating-orb-2"></div>
    <div class="floating-orb floating-orb-3"></div>
  </div>

  <div class="relative z-10 max-w-6xl mx-auto px-6 md:px-8">
    <!-- Main Content (render immediately, no scroll-trigger reveal) -->
    <div class="text-center space-y-12">
      <!-- CTA Section -->
      <div class="space-y-8">
        <!-- Animated Heading -->
        <div class="relative">
          <h3 class="font-display text-cream text-3xl md:text-5xl lg:text-6xl font-light tracking-tight group inline-block">
            <span class="footer-text-reveal">{headlinePrefix}</span>
            <span class="relative inline-block ml-4">
              <span class="footer-gradient-text bg-gradient-to-r from-cyan-400 via-blue-400 to-purple-400 bg-clip-text text-transparent animate-gradient-x">
                {headlineHighlight}
              </span>
              <!-- Enhanced Underline Animation -->
              <div class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-cyan-400 to-purple-400 group-hover:w-full transition-all duration-700 ease-out"></div>
              <!-- Glowing Effect -->
              <div class="absolute inset-0 bg-gradient-to-r from-cyan-400/20 via-blue-400/20 to-purple-400/20 blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            </span>
          </h3>
          <!-- Sparkle Effects -->
          <div class="sparkles absolute inset-0 pointer-events-none">
            <div class="sparkle sparkle-1"></div>
            <div class="sparkle sparkle-2"></div>
            <div class="sparkle sparkle-3"></div>
          </div>
        </div>

        <!-- Description -->
        <div class="relative">
          <p class="text-cream/70 text-lg md:text-xl leading-relaxed max-w-2xl mx-auto footer-description-reveal">
            {description}
          </p>
          <!-- Subtle background glow -->
          <div class="absolute inset-0 bg-gradient-radial from-cream/5 via-transparent to-transparent blur-2xl opacity-60"></div>
        </div>

        <!-- Enhanced CTA Buttons -->
        <div class="flex flex-col sm:flex-row items-center justify-center gap-6 pt-4">
          {primaryButton && (
            <a
              href={primaryButton.href}
              class="primary-cta-btn magnetic-button group relative inline-flex items-center gap-2 px-8 py-4 bg-cream text-charcoal rounded-full transition-all duration-500 hover:scale-110 overflow-hidden text-lg font-medium cursor-pointer"
            >
              <!-- Enhanced Animated Background -->
              <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/30 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-700"></div>
              
              <!-- Multi-layer Ripple Effect -->
              <div class="absolute inset-0 bg-gradient-to-r from-cyan-400/0 via-cyan-400/40 to-purple-400/0 rounded-full scale-0 group-hover:scale-110 transition-transform duration-500 opacity-0 group-hover:opacity-100"></div>
              <div class="absolute inset-0 bg-gradient-to-r from-purple-400/0 via-blue-400/30 to-cyan-400/0 rounded-full scale-0 group-hover:scale-125 transition-transform duration-700 opacity-0 group-hover:opacity-100 delay-100"></div>
              
              <!-- Glow Effect -->
              <div class="absolute -inset-2 bg-gradient-to-r from-cyan-400/20 via-purple-400/20 to-blue-400/20 rounded-full opacity-0 group-hover:opacity-100 blur-lg transition-all duration-500"></div>
              
              <span class="relative z-20 font-semibold group-hover:text-charcoal transition-colors duration-300">{primaryButton.label}</span>
              <svg class="relative z-20 w-5 h-5 transform group-hover:translate-x-2 group-hover:rotate-12 group-hover:scale-125 transition-all duration-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
          )}

          {secondaryButton && (
            <a
              href={secondaryButton.href}
              class="get-in-touch-btn magnetic-button group relative inline-flex items-center gap-2 px-8 py-4 rounded-full border-2 border-cream/30 text-cream transition-all duration-500 hover:scale-110 text-lg font-medium overflow-hidden cursor-pointer"
            >
              <!-- Morphing Background -->
              <div class="absolute inset-0 rounded-full bg-gradient-to-r from-cyan-400/0 via-purple-400/0 to-blue-400/0 group-hover:from-cyan-400/20 group-hover:via-purple-400/30 group-hover:to-blue-400/20 transition-all duration-700 transform scale-0 group-hover:scale-100"></div>
              
              <!-- Rotating Border Ring -->
              <div class="absolute -inset-1 rounded-full border-2 border-transparent bg-gradient-to-r from-cyan-400 via-purple-400 to-blue-400 opacity-0 group-hover:opacity-100 transition-opacity duration-500 animate-spin-slow"></div>
              <div class="absolute inset-0 rounded-full bg-charcoal"></div>
              
              <!-- Particle Burst Effect -->
              <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <div class="particle particle-1"></div>
                <div class="particle particle-2"></div>
                <div class="particle particle-3"></div>
                <div class="particle particle-4"></div>
                <div class="particle particle-5"></div>
                <div class="particle particle-6"></div>
              </div>
              
              <!-- Lightning Effect -->
              <div class="absolute inset-0 rounded-full overflow-hidden opacity-0 group-hover:opacity-100 transition-all duration-300">
                <div class="lightning-bolt lightning-1"></div>
                <div class="lightning-bolt lightning-2"></div>
              </div>
              
              <!-- Text with Gradient -->
              <span class="relative z-20 group-hover:bg-gradient-to-r group-hover:from-cyan-400 group-hover:via-purple-400 group-hover:to-blue-400 group-hover:bg-clip-text group-hover:text-transparent transition-all duration-500 font-semibold">
                {secondaryButton.label}
              </span>
              
              <!-- Enhanced Arrow with Morphing -->
              <div class="relative z-20 transform group-hover:rotate-12 group-hover:scale-125 transition-all duration-500">
                <svg class="w-5 h-5 group-hover:animate-pulse" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path class="group-hover:stroke-cyan-400 transition-colors duration-300" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </div>
            </a>
          )}
        </div>
      </div>

      <!-- Enhanced Social Links -->
      {socials && socials.length > 0 && (
        <div class="space-y-6">
          <div class="flex items-center justify-center gap-6">
            {socials.map((s, index) => (
              <a
                href={s.href}
                target="_blank"
                rel="noopener noreferrer"
                class="magnetic-social group relative p-3 text-cream/60 hover:text-cream transition-all duration-300 hover:scale-110"
                aria-label={`${s.name} Profile`}
                style={`animation-delay: ${index * 0.1}s`}
              >
                <!-- Animated Background -->
                <div class="absolute inset-0 bg-cream/10 rounded-full scale-0 group-hover:scale-100 transition-transform duration-300"></div>
                <!-- Rotating Ring -->
                <div class="absolute inset-0 border-2 border-transparent group-hover:border-cyan-400/50 rounded-full scale-110 group-hover:scale-125 transition-all duration-500 group-hover:animate-spin-slow"></div>
                <!-- Glow Effect -->
                <div class="absolute inset-0 bg-gradient-radial from-cyan-400/20 via-transparent to-transparent rounded-full scale-0 group-hover:scale-150 transition-transform duration-700 blur-md"></div>
                {s.name === 'github' && (
                  <svg class="relative z-10 w-6 h-6 group-hover:rotate-12 group-hover:scale-110 transition-all duration-300" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                )}
                {s.name === 'linkedin' && (
                  <svg class="relative z-10 w-6 h-6 group-hover:rotate-12 group-hover:scale-110 transition-all duration-300" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                )}
                {s.name === 'facebook' && (
                  <svg class="relative z-10 w-6 h-6 group-hover:rotate-12 group-hover:scale-110 transition-all duration-300" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                )}
                {s.name === 'instagram' && (
                  <svg class="relative z-10 w-6 h-6 group-hover:rotate-12 group-hover:scale-110 transition-all duration-300" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                  </svg>
                )}
              </a>
            ))}
          </div>
        </div>
      )}
    </div>

    <!-- Enhanced Footer Bottom -->
    <div class="relative mt-16 pt-8 border-t border-cream/10">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4 text-sm text-cream/50">
        <div class="footer-copyright-reveal">
          {copyright}
        </div>
        <div class="footer-tagline-reveal flex items-center gap-2">
          <span>{tagline}</span>
        </div>
      </div>
      
      <!-- Decorative Line -->
      <div class="absolute top-0 left-1/2 transform -translate-x-1/2 w-32 h-0.5 bg-gradient-to-r from-transparent via-cyan-400/50 to-transparent"></div>
    </div>
  </div>
</footer>

<script>
  // Enhanced Footer Interactive Effects
  function initFooterEnhancements() {
    const footer = document.querySelector('footer');
    if (!footer) return;

    // Parallax Floating Orbs
    const orbs = footer.querySelectorAll('.floating-orb');
    
    const handleScroll = () => {
      const scrolled = window.pageYOffset;
      
      orbs.forEach((orb, index) => {
        const speed = (index + 1) * 0.5;
        const yPos = scrolled * speed * 0.1;
        (orb as HTMLElement).style.transform = `translateY(${yPos}px)`;
      });
    };
    
    window.addEventListener('scroll', handleScroll);

    // Enhanced Primary CTA Button
    const primaryBtn = footer.querySelector('.primary-cta-btn') as HTMLElement;
    
    if (primaryBtn) {
      primaryBtn.addEventListener('mouseenter', () => {
        primaryBtn.style.transform = 'translateY(-3px) scale(1.08) translateZ(0)';
      });
      
      primaryBtn.addEventListener('mouseleave', () => {
        primaryBtn.style.transform = '';
      });
      
      primaryBtn.addEventListener('mousemove', (e) => {
        const rect = primaryBtn.getBoundingClientRect();
        const x = e.clientX - rect.left - rect.width / 2;
        const y = e.clientY - rect.top - rect.height / 2;
        
        const moveX = x * 0.1;
        const moveY = y * 0.1;
        
        primaryBtn.style.transform = `translateY(-3px) scale(1.08) translate(${moveX}px, ${moveY}px) translateZ(0)`;
      });
    }

    // Enhanced Get in Touch Button Interactions
    const getInTouchBtn = footer.querySelector('.get-in-touch-btn') as HTMLElement;
    
    if (getInTouchBtn) {
      let isHovering = false;
      
      // Mouse enter - start effects
      getInTouchBtn.addEventListener('mouseenter', () => {
        isHovering = true;
        
        // Add magnetic effect
        getInTouchBtn.style.transform = 'scale(1.05) translateZ(0)';
        
        // Trigger lightning effect
        const lightning = getInTouchBtn.querySelectorAll('.lightning-bolt');
        lightning.forEach((bolt) => {
          (bolt as HTMLElement).style.opacity = '1';
        });
      });
      
      // Mouse leave
      getInTouchBtn.addEventListener('mouseleave', () => {
        isHovering = false;
        getInTouchBtn.style.transform = '';
        
        // Hide lightning
        const lightning = getInTouchBtn.querySelectorAll('.lightning-bolt');
        lightning.forEach((bolt) => {
          (bolt as HTMLElement).style.opacity = '0';
        });
      });
      
      // Mouse move for magnetic effect
      getInTouchBtn.addEventListener('mousemove', (e) => {
        if (!isHovering) return;
        
        const rect = getInTouchBtn.getBoundingClientRect();
        const x = e.clientX - rect.left - rect.width / 2;
        const y = e.clientY - rect.top - rect.height / 2;
        
        const moveX = x * 0.15;
        const moveY = y * 0.15;
        
        getInTouchBtn.style.transform = `scale(1.05) translate(${moveX}px, ${moveY}px) translateZ(0)`;
      });
      
      // Enhanced click effect
      getInTouchBtn.addEventListener('click', (e) => {
        const mouseEvent = e as MouseEvent;
        
        // Create enhanced ripple effects
        for (let i = 0; i < 3; i++) {
          const ripple = document.createElement('div');
          const rect = getInTouchBtn.getBoundingClientRect();
          const size = Math.max(rect.width, rect.height) * (1.2 + i * 0.3);
          const x = mouseEvent.clientX - rect.left - size / 2;
          const y = mouseEvent.clientY - rect.top - size / 2;
          
          ripple.style.cssText = `
            position: absolute;
            border-radius: 50%;
            background: linear-gradient(45deg, rgba(34, 197, 194, ${0.4 - i * 0.1}), rgba(168, 85, 247, ${0.3 - i * 0.1}));
            width: ${size}px;
            height: ${size}px;
            left: ${x}px;
            top: ${y}px;
            animation: enhanced-ripple-${i + 1} 1s ease-out;
            pointer-events: none;
            z-index: 100;
          `;
          
          getInTouchBtn.appendChild(ripple);
          
          setTimeout(() => {
            if (ripple.parentNode) {
              ripple.parentNode.removeChild(ripple);
            }
          }, 1000);
        }
        
        // Vibration effect (if supported)
        if ('vibrate' in navigator) {
          navigator.vibrate([50, 30, 50]);
        }
      });
    }
    
    // Regular buttons ripple effect
    const otherButtons = footer.querySelectorAll('.magnetic-button:not(.get-in-touch-btn)');
    
    otherButtons.forEach(button => {
      button.addEventListener('click', (e) => {
        const mouseEvent = e as MouseEvent;
        const ripple = document.createElement('div');
        const rect = (button as HTMLElement).getBoundingClientRect();
        const size = Math.max(rect.width, rect.height);
        const x = mouseEvent.clientX - rect.left - size / 2;
        const y = mouseEvent.clientY - rect.top - size / 2;
        
        ripple.className = 'absolute rounded-full bg-white/20 animate-ping pointer-events-none';
        ripple.style.width = `${size}px`;
        ripple.style.height = `${size}px`;
        ripple.style.left = `${x}px`;
        ripple.style.top = `${y}px`;
        
        (button as HTMLElement).appendChild(ripple);
        
        setTimeout(() => {
          if (ripple.parentNode) {
            ripple.parentNode.removeChild(ripple);
          }
        }, 600);
      });
    });
  }

  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initFooterEnhancements);
  } else {
    initFooterEnhancements();
  }

  // Also initialize on Astro page load for SPA navigation
  document.addEventListener('astro:page-load', initFooterEnhancements);
</script>
