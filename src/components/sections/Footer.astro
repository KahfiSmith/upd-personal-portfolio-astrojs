---
export type SocialName = 'github' | 'linkedin' | 'facebook' | 'instagram';

export interface SocialLink { name: SocialName; href: string }
export interface Button { label: string; href: string }
export interface Props {
  headlinePrefix?: string;
  headlineHighlight?: string;
  description?: string;
  primaryButton?: Button;
  secondaryButton?: Button;
  socials?: SocialLink[];
  copyright?: string;
  tagline?: string;
}

const {
  headlinePrefix = "Let’s Build Something",
  headlineHighlight = "Amazing",
  description = "I'm always excited to collaborate on interesting projects and bring creative ideas to life. Let's create something extraordinary together.",
  primaryButton = { label: "View My Work", href: "/works" },
  secondaryButton = { label: "Get in Touch", href: "mailto:hello@kahfismith.dev" },
  socials = [
    { name: 'github', href: 'https://github.com/kahfismith' },
    { name: 'linkedin', href: 'https://linkedin.com/in/kahfismith' },
    { name: 'facebook', href: 'https://facebook.com/kahfismith' },
    { name: 'instagram', href: 'https://instagram.com/kahfismith' },
  ],
  copyright = '© 2024 Kahfi Smith. All rights reserved.',
  tagline = 'Made with ❤️ in Jakarta',
} = Astro.props as Props;
---

<footer class="bg-charcoal text-cream py-16 md:py-20 overflow-hidden">
  <div class="max-w-6xl mx-auto px-6 md:px-8">
    <!-- Main Content -->
    <div class="text-center space-y-12" data-animate="fade-up" data-delay="0.2">
      <!-- CTA Section -->
      <div class="space-y-8">
        <!-- Animated Heading -->
        <div class="relative">
          <h3 class="font-display text-cream text-3xl md:text-5xl lg:text-6xl font-light tracking-tight group inline-block">
            {headlinePrefix}
            <span class="relative inline-block">
              <span class="bg-gradient-to-r from-cyan-400 via-blue-400 to-purple-400 bg-clip-text text-transparent">
                {headlineHighlight}
              </span>
              <!-- Underline Animation -->
              <div class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-cyan-400 to-purple-400 group-hover:w-full transition-all duration-700 ease-out"></div>
            </span>
          </h3>
        </div>

        <!-- Description -->
        <p class="text-cream/70 text-lg md:text-xl leading-relaxed max-w-2xl mx-auto">
          {description}
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row items-center justify-center gap-6 pt-4">
          {primaryButton && (
            <a
              href={primaryButton.href}
              class="group relative inline-flex items-center gap-2 px-8 py-4 bg-cream text-charcoal rounded-full transition-all duration-300 hover:shadow-lg hover:shadow-cream/20 hover:scale-105 overflow-hidden text-lg font-medium"
            >
              <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>
              <span class="relative z-10">{primaryButton.label}</span>
              <svg class="relative z-10 w-5 h-5 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
          )}

          {secondaryButton && (
            <a
              href={secondaryButton.href}
              class="group relative inline-flex items-center gap-2 px-8 py-4 rounded-full border-2 border-cream/30 text-cream hover:border-cream hover:bg-cream/5 transition-all duration-300 hover:scale-105 text-lg font-medium"
            >
              <div class="absolute inset-0 rounded-full bg-gradient-to-r from-cyan-400/0 via-cyan-400/20 to-cyan-400/0 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
              <span class="relative z-10">{secondaryButton.label}</span>
            </a>
          )}
        </div>
      </div>

      <!-- Social Links -->
      {socials && socials.length > 0 && (
        <div class="space-y-6">
          <div class="flex items-center justify-center gap-6">
            {socials.map((s) => (
              <a
                href={s.href}
                class="group relative p-3 text-cream/60 hover:text-cream transition-all duration-300 hover:scale-110"
                aria-label={`${s.name} Profile`}
              >
                <div class="absolute inset-0 bg-cream/10 rounded-full scale-0 group-hover:scale-100 transition-transform duration-300"></div>
                {s.name === 'github' && (
                  <svg class="relative z-10 w-6 h-6 group-hover:rotate-12 transition-transform duration-300" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                )}
                {s.name === 'linkedin' && (
                  <svg class="relative z-10 w-6 h-6 group-hover:rotate-12 transition-transform duration-300" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                )}
                {s.name === 'facebook' && (
                  <svg class="relative z-10 w-6 h-6 group-hover:rotate-12 transition-transform duration-300" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                )}
                {s.name === 'instagram' && (
                  <svg class="relative z-10 w-6 h-6 group-hover:rotate-12 transition-transform duration-300" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                  </svg>
                )}
              </a>
            ))}
          </div>
        </div>
      )}
    </div>
  </div>
</footer>

