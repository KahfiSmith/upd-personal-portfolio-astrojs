---
import aboutMeAnim from "@/scripts/about-me-anim.ts?url";
---

<section id="about" class="relative py-20 md:py-28 overflow-hidden">
  <!-- Minimal Background -->
  <div aria-hidden="true" class="absolute inset-0 -z-10">    
    <!-- Single floating element for subtle depth -->
    <div data-float-element class="absolute top-1/3 right-1/4 w-40 h-40 opacity-5">
      <div class="w-full h-full bg-gradient-to-br from-charcoal/10 to-transparent rounded-full blur-2xl"></div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-6 md:px-8">
    <!-- Simple Header -->
    <div class="text-center mb-16">
      <div class="overflow-hidden mb-4">
        <h2 data-about-title class="font-display text-charcoal text-4xl md:text-5xl lg:text-6xl leading-tight font-medium">
          About Me
        </h2>
      </div>
      <div class="overflow-hidden">
        <p data-about-subtitle class="text-lg md:text-xl text-charcoal/60 font-light max-w-2xl mx-auto leading-relaxed">
          Frontend developer focused on creating meaningful digital experiences
        </p>
      </div>
    </div>

    <!-- Clean Content Grid -->
    <div class="about-container grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
      
      <!-- Left Column - Main Content -->
      <div class="space-y-8">
        <!-- Main Text -->
        <div class="space-y-6">
          <div class="overflow-hidden">
            <p data-about-text-1 class="text-charcoal/80 text-lg md:text-xl leading-relaxed">
              I'm a frontend developer passionate about creating <span class="text-charcoal font-medium">meaningful digital experiences</span>. I focus on clean code, thoughtful design, and building interfaces that feel natural and intuitive.
            </p>
          </div>
          
          <div class="overflow-hidden">
            <p data-about-text-2 class="text-charcoal/70 text-base md:text-lg leading-relaxed">
              With expertise in modern frameworks and a deep understanding of user experience principles, I transform ideas into responsive, accessible web applications.
            </p>
          </div>
        </div>

        <!-- Simple Skills List -->
        <div data-skills-section class="space-y-4">
          <h3 data-skills-title class="text-lg font-medium text-charcoal/80">
            Technologies I work with
          </h3>
          <div data-skills-list class="flex flex-wrap gap-3">
            <span class="skill-tag px-3 py-1 bg-charcoal/5 text-charcoal/70 text-sm rounded-md border border-charcoal/10 transition-colors hover:bg-charcoal/10">React</span>
            <span class="skill-tag px-3 py-1 bg-charcoal/5 text-charcoal/70 text-sm rounded-md border border-charcoal/10 transition-colors hover:bg-charcoal/10">Next.js</span>
            <span class="skill-tag px-3 py-1 bg-charcoal/5 text-charcoal/70 text-sm rounded-md border border-charcoal/10 transition-colors hover:bg-charcoal/10">TypeScript</span>
            <span class="skill-tag px-3 py-1 bg-charcoal/5 text-charcoal/70 text-sm rounded-md border border-charcoal/10 transition-colors hover:bg-charcoal/10">Tailwind CSS</span>
            <span class="skill-tag px-3 py-1 bg-charcoal/5 text-charcoal/70 text-sm rounded-md border border-charcoal/10 transition-colors hover:bg-charcoal/10">GSAP</span>
            <span class="skill-tag px-3 py-1 bg-charcoal/5 text-charcoal/70 text-sm rounded-md border border-charcoal/10 transition-colors hover:bg-charcoal/10">Node.js</span>
          </div>
        </div>

        <!-- Simple CTA -->
        <div data-about-cta class="pt-4">
          <a 
            href="/works" 
            class="cta-primary inline-flex items-center gap-2 px-6 py-3 bg-charcoal text-cream rounded-lg font-medium text-base transition-all duration-300 hover:bg-charcoal/90 hover:shadow-lg hover:-translate-y-0.5"
          >
            <span>View My Work</span>
            <svg class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Right Column - Simple Card -->
      <div class="relative">
        <div data-profile-card class="relative p-8 bg-cream/80 backdrop-blur-sm border border-charcoal/10 rounded-2xl shadow-lg transition-all duration-300 hover:shadow-xl hover:-translate-y-1">
          
          <!-- Profile header -->
          <div class="text-center mb-6">
            <div class="w-16 h-16 bg-charcoal rounded-xl flex items-center justify-center mx-auto mb-4">
              <span class="text-xl text-cream font-bold">K</span>
            </div>
            <h3 class="font-display text-xl text-charcoal font-medium">Mohamad Al-Kahfi</h3>
            <p class="text-charcoal/60 text-sm">Frontend Developer</p>
          </div>

          <!-- Simple stats -->
          <div class="grid grid-cols-2 gap-4 mb-6">
            <div class="text-center p-3 rounded-lg bg-charcoal/5">
              <div class="stat-number text-lg font-bold text-charcoal">3+</div>
              <div class="text-xs text-charcoal/60">Years</div>
            </div>
            <div class="text-center p-3 rounded-lg bg-charcoal/5">
              <div class="stat-number text-lg font-bold text-charcoal">50+</div>
              <div class="text-xs text-charcoal/60">Projects</div>
            </div>
          </div>

          <!-- Location -->
          <div class="text-center">
            <div class="flex items-center justify-center gap-2 text-charcoal/60 text-sm">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <span>Indonesia</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script type="module" src={aboutMeAnim}></script>
</section>

<style>
  .stat-number {
    background: linear-gradient(135deg, #374151 0%, #6b7280 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Subtle floating animation */
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-8px); }
  }
  
  [data-float-element] {
    animation: float 8s ease-in-out infinite;
  }

  /* Smooth reveal animations */
  .overflow-hidden {
    mask: linear-gradient(to bottom, transparent, black 8px, black calc(100% - 8px), transparent);
  }
</style>