---
import AnimatedText from "@/components/ui/AnimatedText.astro";
import ParallaxSection from "@/components/ui/ParallaxSection.astro";
import skills from "@/data/skills";
---

<ParallaxSection id="skills" class="mx-auto max-w-6xl px-6 py-24 sm:py-32" speed={0.35}>
  <AnimatedText 
    text="Skills" 
    as="h2" 
    class="text-2xl sm:text-3xl font-semibold mb-8"
    type="words"
  />
  <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
    {skills.map((group) => (
      <div class="rounded-xl border border-neutral-800/80 bg-neutral-900/40 p-5" data-animate="fade-up">
        <p class="text-sm text-neutral-400 mb-2">{group.title}</p>
        <div class="flex flex-wrap gap-2">
          {group.items.map((item) => (
            <span class="px-3 py-1 rounded-md bg-neutral-800/70 text-neutral-200 text-sm">{item}</span>
          ))}
        </div>
      </div>
    ))}
  </div>
</ParallaxSection>

