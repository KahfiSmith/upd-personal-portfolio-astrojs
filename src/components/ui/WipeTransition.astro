---
// WipeTransition - Animasi wipe dari bawah ke atas dengan judul halaman
---

<div id="wipe-transition-overlay" aria-hidden="true">
  <div class="wipe-overlay">
    <div class="wipe-content">
      <div class="wipe-decoration top"></div>
      <h2 class="wipe-title"></h2>
      <div class="wipe-decoration bottom"></div>
    </div>
  </div>
</div>

<style>
  #wipe-transition-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 9999;
    pointer-events: none;
    overflow: hidden;
  }

  #wipe-transition-overlay.is-active {
    pointer-events: all;
  }

  /* Prevent content flash during transition (global selectors) */
  :global(html.wipe-transitioning) {
    overflow: hidden;
    /* Provide dark fallback background across page swap */
    background-color: #0f0f0f;
  }
  
  /* Keep overlay visible during transition */
  :global(html.wipe-transitioning #wipe-transition-overlay) {
    visibility: visible !important;
  }
  
  /* Force overlay to stay at 0% (full screen) when transitioning */
  :global(html.wipe-transitioning .wipe-overlay) {
    transform: translateY(0%) translateZ(0) !important;
  }

  .wipe-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    /* Solid black background first, gradient on top */
    background-color: #0f0f0f;
    background-image: linear-gradient(
      135deg,
      #0f0f0f 0%,
      #1a1a1a 25%,
      #252525 50%,
      #1a1a1a 75%,
      #0f0f0f 100%
    );
    transform: translateY(100%) translateZ(0);
    display: flex;
    align-items: center;
    justify-content: center;
    will-change: transform;
    position: relative;
    overflow: hidden;
    backface-visibility: hidden;
    contain: layout paint style;
    /* Prevent any transparency during navigation */
    opacity: 1;
  }
  
  /* Ensure overlay is fully opaque when active */
  #wipe-transition-overlay.is-active .wipe-overlay {
    opacity: 1 !important;
  }

  /* Animated gradient background */
  .wipe-overlay::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(
      circle at center,
      rgba(230, 126, 34, 0.15) 0%,
      transparent 60%
    );
    animation: rotate 20s linear infinite;
    opacity: 0;
    transition: opacity 0.6s ease;
  }

  #wipe-transition-overlay.is-active .wipe-overlay::before {
    opacity: 1;
  }

  @keyframes rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  /* Particles effect */
  .wipe-overlay::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      radial-gradient(2px 2px at 20% 30%, rgba(244, 243, 237, 0.2), transparent),
      radial-gradient(2px 2px at 60% 70%, rgba(244, 243, 237, 0.15), transparent),
      radial-gradient(1px 1px at 50% 50%, rgba(244, 243, 237, 0.1), transparent),
      radial-gradient(1px 1px at 80% 10%, rgba(244, 243, 237, 0.15), transparent),
      radial-gradient(2px 2px at 90% 60%, rgba(244, 243, 237, 0.1), transparent),
      radial-gradient(1px 1px at 33% 80%, rgba(244, 243, 237, 0.1), transparent);
    background-size: 200% 200%;
    animation: particles 25s ease-in-out infinite;
    opacity: 0;
    transition: opacity 0.6s ease;
  }

  #wipe-transition-overlay.is-active .wipe-overlay::after {
    opacity: 1;
  }

  @keyframes particles {
    0%, 100% { background-position: 0% 0%; }
    50% { background-position: 100% 100%; }
  }

  .wipe-content {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }

  .wipe-decoration {
    width: 100px;
    height: 2px;
    background: linear-gradient(
      to right,
      transparent,
      var(--color-retro-orange),
      transparent
    );
    opacity: 0;
    transform: scaleX(0);
    will-change: opacity, transform;
  }

  .wipe-decoration.top {
    transform-origin: center;
  }

  .wipe-decoration.bottom {
    transform-origin: center;
  }

  .wipe-title {
    font-family: var(--font-display);
    font-size: clamp(3rem, 10vw, 8rem);
    font-weight: 700;
    color: var(--color-cream);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    opacity: 0;
    transform: translateY(30px) scale(0.9);
    will-change: opacity, transform;
    margin: 0;
    text-align: center;
    padding: 0 2rem;
    line-height: 1.1;
    position: relative;
  }

  /* Enhanced glow effect */
  .wipe-title {
    text-shadow: 
      0 0 30px rgba(230, 126, 34, 0.5),
      0 0 60px rgba(230, 126, 34, 0.3),
      0 0 90px rgba(230, 126, 34, 0.2),
      0 2px 10px rgba(0, 0, 0, 0.8),
      0 4px 20px rgba(0, 0, 0, 0.5);
    filter: drop-shadow(0 0 20px rgba(230, 126, 34, 0.4));
  }

  /* Shimmer effect */
  .wipe-title::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(244, 243, 237, 0.4),
      transparent
    );
    animation: shimmer 3s ease-in-out infinite;
  }

  @keyframes shimmer {
    0% { left: -100%; }
    50%, 100% { left: 200%; }
  }

  /* Subtle pulse animation */
  #wipe-transition-overlay.is-active .wipe-title {
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% {
      filter: drop-shadow(0 0 20px rgba(230, 126, 34, 0.4));
    }
    50% {
      filter: drop-shadow(0 0 35px rgba(230, 126, 34, 0.6));
    }
  }

  @media (max-width: 768px) {
    .wipe-title {
      font-size: clamp(2rem, 8vw, 4rem);
      letter-spacing: 0.05em;
    }
    
    .wipe-decoration {
      width: 60px;
    }
    
    .wipe-content {
      gap: 1.5rem;
    }
  }

  /* Smooth transitions */
  * {
    backface-visibility: hidden;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
</style>
