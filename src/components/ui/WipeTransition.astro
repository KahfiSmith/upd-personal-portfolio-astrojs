---
// WipeTransition - Animasi wipe dari bawah ke atas dengan judul halaman
---

<div id="wipe-transition-overlay" aria-hidden="true">
  <!-- Backdrop solid untuk menutupi konten sepenuhnya -->
  <div class="wipe-backdrop"></div>
  <!-- Overlay animasi di atas backdrop -->
  <div class="wipe-overlay">
    <div class="wipe-content">
      <h2 class="wipe-title"></h2>
      <p class="wipe-subtitle"></p>
    </div>
  </div>
</div>

<style>
  #wipe-transition-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 9999;
    pointer-events: none;
    overflow: hidden;
    visibility: hidden; /* Hidden by default, shown only when .is-active */
  }

  #wipe-transition-overlay.is-active {
    pointer-events: all;
    visibility: visible; /* Show when active */
  }

  /* BACKDROP: Solid charcoal layer for wipe-out only */
  /* Always charcoal regardless of theme - solid cover during outro */
  .wipe-backdrop {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #2a2a2a; /* solid charcoal - always */
    opacity: 0;
    z-index: 1;
    will-change: opacity;
    pointer-events: none;
  }

  /* Backdrop opacity controlled by GSAP, not CSS */
  #wipe-transition-overlay.is-active .wipe-backdrop {
    /* opacity controlled by GSAP animation */
  }

  /* Prevent content flash during transition (global selectors) */
  :global(html.wipe-transitioning) {
    overflow: hidden;
    /* Keep cream background during transitions (overlay will cover) */
    background-color: #f4f3ed !important;
  }
  
  /* Keep overlay visible during transition */
  :global(html.wipe-transitioning #wipe-transition-overlay) {
    visibility: visible !important;
  }
  
  /* Note: Don't force transform here as it interferes with GSAP animations */

  .wipe-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    /* Default: charcoal gradient */
    background-color: #2a2a2a;
    background-image: linear-gradient(135deg,#2a2a2a 0%,#353535 25%,#404040 50%,#353535 75%,#2a2a2a 100%);
    transform: translateY(100%) translateZ(0);
    display: flex;
    align-items: center;
    justify-content: center;
    will-change: transform, opacity, scale;
    position: relative;
    overflow: hidden;
    backface-visibility: hidden;
    contain: layout paint style;
    /* Prevent any transparency during navigation */
    opacity: 1;
    /* Center scaling for dramatic effect */
    transform-origin: center center;
    /* Overlay berada di atas backdrop */
    z-index: 2;
  }
  
  /* Ensure overlay is fully opaque when active */
  #wipe-transition-overlay.is-active .wipe-overlay {
    opacity: 1 !important;
  }

  /* Subtle background glow removed (no cyan) */
  .wipe-overlay::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: none;
    opacity: 0;
  }

  /* Light theme for home: flat cream overlay */
  #wipe-transition-overlay.wipe-light .wipe-overlay {
    background-color: #f4f3ed;
    background-image: none;
  }

  /* Keep disabled */
  #wipe-transition-overlay.is-active .wipe-overlay::before { opacity: 0; }

  @keyframes rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  /* Particles effect */
  .wipe-overlay::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      radial-gradient(2px 2px at 20% 30%, rgba(244, 243, 237, 0.2), transparent),
      radial-gradient(2px 2px at 60% 70%, rgba(244, 243, 237, 0.15), transparent),
      radial-gradient(1px 1px at 50% 50%, rgba(244, 243, 237, 0.1), transparent),
      radial-gradient(1px 1px at 80% 10%, rgba(244, 243, 237, 0.15), transparent),
      radial-gradient(2px 2px at 90% 60%, rgba(244, 243, 237, 0.1), transparent),
      radial-gradient(1px 1px at 33% 80%, rgba(244, 243, 237, 0.1), transparent);
    background-size: 200% 200%;
    animation: particles 25s ease-in-out infinite;
    opacity: 0;
    transition: opacity 0.6s ease;
  }

  #wipe-transition-overlay.is-active .wipe-overlay::after {
    opacity: 1;
  }

  @keyframes particles {
    0%, 100% { background-position: 0% 0%; }
    50% { background-position: 100% 100%; }
  }

  .wipe-content {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
  }

  /* Horizontal decorations removed by request */

  .wipe-title {
    font-family: var(--font-display);
    font-size: clamp(1.25rem, 4.5vw, 1.5rem);
    font-weight: 700;
    color: #ffffff; /* default for dark */
    text-transform: uppercase;
    letter-spacing: 0.08em;
    opacity: 0;
    transform: translateY(30px) scale(0.9);
    will-change: opacity, transform;
    margin: 0;
    text-align: center;
    padding: 0 2rem;
    line-height: 1.1;
    position: relative;
  }

  /* Light theme title color */
  #wipe-transition-overlay.wipe-light .wipe-title { color: #0b0b0b; }

  /* Subtitle below title */
  .wipe-subtitle {
    font-family: "Space Grotesk", Outfit, ui-sans-serif, system-ui, -apple-system, sans-serif;
    font-size: clamp(0.95rem, 2.2vw, 1.1rem);
    font-weight: 600; /* Lebih tegas dari 500 */
    color: rgba(255,255,255,0.95); /* Lebih solid untuk ketegasan */
    letter-spacing: 0.02em; /* Sedikit lebih lebar untuk clarity */
    line-height: 1.5;
    opacity: 0;
    transform: translateY(20px);
    margin: 0;
    text-align: center;
    padding: 0 2rem;
  }

  /* Light theme subtitle color */
  #wipe-transition-overlay.wipe-light .wipe-subtitle { color: rgba(11,11,11,0.85); }

  @media (max-width: 768px) {
    .wipe-title {
      font-size: clamp(1.15rem, 5vw, 1.4rem);
      letter-spacing: 0.05em;
    }
    
    .wipe-content { gap: 0.75rem; }
  }

  /* Smooth transitions */
  * {
  /* Light theme for home: use cream backdrop */
  #wipe-transition-overlay.wipe-light .wipe-backdrop {
    background-color: #f4f3ed;
  }
    backface-visibility: hidden;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
</style>
