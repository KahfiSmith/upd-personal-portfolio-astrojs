---
import "../styles/global.css";
import CustomCursor from "@/components/ui/CustomCursor.astro";
// Choose one of these loaders:
// import CurtainLoader from "@/components/ui/CurtainLoader.astro";          // With progress bar
import SimpleCurtainLoader from "@/components/ui/SimpleCurtainLoader.astro";  // Just brand name
import bootAnimations from "@/scripts/boot-animations.ts?url";
import smoothScroll from "@/scripts/boot-smooth-scroll.ts?url";
import pageReveal from "@/scripts/boot-page-reveal.ts?url";
// Choose corresponding script:
// import bootCurtainLoader from "@/scripts/boot-curtain-loader.ts?url";     // For CurtainLoader
import bootSimpleCurtainLoader from "@/scripts/boot-simple-curtain-loader.ts?url";  // For SimpleCurtainLoader
import { SITE } from "@/config/site";
import disableTopPull from "@/scripts/disable-top-pull.ts?url";

interface Props {
  title?: string;
  description?: string;
}

const { title, description } = Astro.props as Props;
const pageTitle = title ?? SITE.title;
const pageDesc = description ?? SITE.description;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/images/kahfi-og.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Preload critical fonts -->
    <link rel="preload" href="/fonts/PlayfairDisplay-VariableFont_wght.ttf" as="font" type="font/ttf" crossorigin />
    <link rel="preload" href="/fonts/Inter-VariableFont_opsz,wght.ttf" as="font" type="font/ttf" crossorigin />
    <link rel="preload" href="/fonts/SpaceGrotesk-VariableFont_wght.ttf" as="font" type="font/ttf" crossorigin />
    
    <title>{pageTitle}</title>
    {pageDesc && <meta name="description" content={pageDesc} />}
    <meta property="og:title" content={pageTitle} />
    {pageDesc && <meta property="og:description" content={pageDesc} />}
    <meta property="og:image" content={SITE.ogImage} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    {pageDesc && <meta name="twitter:description" content={pageDesc} />}
    <meta name="twitter:image" content={SITE.ogImage} />
  </head>
  <body class="bg-cream text-charcoal antialiased min-h-screen">
    <!-- Choose one loader: -->
     
    <!-- <SimpleCurtainLoader /> -->
    <CustomCursor />
    <div id="page-transition-overlay" class="fixed inset-0 z-50 bg-neutral-950 pointer-events-none transform scale-y-0 origin-top"></div>
    <noscript><style>#page-transition-overlay{display:none !important}</style></noscript>

    <slot />

    <!-- Choose corresponding script: -->
    <script type="module" src={bootSimpleCurtainLoader}></script>
    <script type="module" src={pageReveal}></script>
    <script type="module" src={smoothScroll}></script>
    <script type="module" src={bootAnimations}></script>
    <script type="module" src={disableTopPull}></script>
  </body>
    <!-- Mark first-visit ASAP to avoid FOUC -->
    <script>
      try { if (!localStorage.getItem('hasVisited')) document.documentElement.classList.add('needs-reveal'); } catch (e) {}
    </script>
</html>
    <!-- Mark first-visit ASAP to avoid FOUC -->
    <script>
      try {
        if (!localStorage.getItem('hasVisited')) {
          document.documentElement.classList.add('needs-reveal');
        }
      } catch (e) {}
    </script>

    <!-- Critical loader CSS to avoid cream flash before Tailwind loads -->
    <style>
      /* Ensure loader covers viewport immediately */
      #simple-curtain-loader{position:fixed;inset:0;z-index:9999;background:#0b0b0b;opacity:1}
      #simple-curtain-loader .curtain-top,#simple-curtain-loader .curtain-bottom{position:absolute;left:0;width:100%;height:50vh}
      #simple-curtain-loader .curtain-top{top:0;background:linear-gradient(to bottom,#0a0a0a,#111,#1a1a1a)}
      #simple-curtain-loader .curtain-bottom{bottom:0;background:linear-gradient(to top,#0a0a0a,#111,#1a1a1a)}
      /* Avoid background flash on first visit */
      html.needs-reveal body{background:#0b0b0b !important}
    </style>
