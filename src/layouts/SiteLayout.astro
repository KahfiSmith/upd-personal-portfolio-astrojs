---
import "../styles/global.css";
import { ViewTransitions } from "astro:transitions";
import CustomCursor from "@/components/ui/CustomCursor.astro";
import WipeTransition from "@/components/ui/WipeTransition.astro";
import bootAnimations from "@/scripts/boot-animations.ts?url";
import smoothScroll from "@/scripts/boot-smooth-scroll.ts?url";
import pageReveal from "@/scripts/boot-page-reveal.ts?url";
import wipeTransition from "@/scripts/wipe-transition.ts?url";
import navResume from "@/scripts/boot-nav-resume.ts?url";
import Footer from "@/components/sections/Footer.astro";
import { SITE } from "@/config/site";
import disableTopPull from "@/scripts/disable-top-pull.ts?url";
import SimpleCurtainLoader from "@/components/ui/SimpleCurtainLoader.astro";
import bootSimpleCurtainLoader from "@/scripts/boot-simple-curtain-loader.ts?url";

interface Props {
  title?: string;
  description?: string;
  hasLoader?: boolean;
}

const { title, description, hasLoader } = Astro.props as Props;
const pageTitle = title ?? SITE.title;
const pageDesc = description ?? SITE.description;
---

<html lang="en" class={hasLoader ? 'has-loader' : undefined}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/images/kahfi-og.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="view-transition" content="same-origin" />
    <!-- Critical background to prevent white flash before CSS loads -->
    <meta name="theme-color" content="#f4f3ed" />
    <style>
      html, body { 
        background: #f4f3ed; 
        margin: 0;
        padding: 0;
        min-height: 100vh;
      }
      /* On reload (curtain active), use dark bg under loader only during reload */
      html.is-reload, html.is-reload body { background: #0b0b0b; }
      /* Always hide custom cursor while wipe transition is active */
      html.wipe-transitioning #custom-cursor { opacity: 0 !important; visibility: hidden !important; }
      /* Keep app content hidden during wipe-in/out (navigation only) */
      html.wipe-transitioning #app-content { opacity: 0; visibility: hidden; }
      /* Ensure background stays cream during wipe transitions */
      html.wipe-transitioning:not(.is-reload) { background: #f4f3ed !important; }
      html.wipe-transitioning:not(.is-reload) body { background: #f4f3ed !important; }
      /* Enable smooth animations for app content */
      #app-content {
        will-change: opacity, transform;
        transform-origin: center center;
      }
      
      /* Page reveal: show overlay by default to avoid initial flicker.
         Hide it on return visits (html.has-visited). */
      #page-transition-overlay { transform-origin: top; transform: scaleY(1); }
      html.has-visited #page-transition-overlay { transform: scaleY(0) !important; }
      /* Prevent content jump during navigation */
      html {
        scroll-behavior: smooth;
      }
      /* Prevent FOUC by ensuring consistent font loading */
      body {
        font-family: Outfit, ui-sans-serif, system-ui, -apple-system, sans-serif;
        visibility: visible;
        opacity: 1;
      }
      /* View Transitions fallback */
      @view-transition {
        navigation: auto;
      }
      /* Smooth page transitions */
      ::view-transition-old(root),
      ::view-transition-new(root) {
        animation-duration: 0.3s;
      }
    </style>
    <!-- Early guard: hide app content on pages with loader to avoid flicker -->
    <style id="early-app-hide">html.has-loader #app-content{visibility:hidden}</style>
    
    <!-- Preload critical fonts -->
    <link rel="preload" href="/fonts/PlayfairDisplay-VariableFont_wght.ttf" as="font" type="font/ttf" crossorigin />
    <link rel="preload" href="/fonts/Outfit-VariableFont_wght.ttf" as="font" type="font/ttf" crossorigin />
    <link rel="preload" href="/fonts/SpaceGrotesk-VariableFont_wght.ttf" as="font" type="font/ttf" crossorigin />
    
    <!-- Preload critical stylesheets -->
    <link rel="preload" href="/src/styles/global.css" as="style" />
    
    <title>{pageTitle}</title>
    {pageDesc && <meta name="description" content={pageDesc} />}
    <meta property="og:title" content={pageTitle} />
    {pageDesc && <meta property="og:description" content={pageDesc} />}
    <meta property="og:image" content={SITE.ogImage} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    {pageDesc && <meta name="twitter:description" content={pageDesc} />}
    <meta name="twitter:image" content={SITE.ogImage} />

    <ViewTransitions />

    <!-- Mark visit state ASAP to avoid FOUC -->
    <script define:vars={{ hasLoader }}>
      try {
        const HAS_LOADER = hasLoader === true;
        // Detect if this is a reload (new + legacy API)
        const perfEntries = performance.getEntriesByType('navigation');
        const nav = perfEntries && perfEntries.length ? perfEntries[0] : undefined;
        // navigation.type can be: 'navigate' | 'reload' | 'back_forward' | 'prerender'
        // Use runtime guard to avoid TS issues in Astro files
        // @ts-ignore - using runtime check for 'type' property
        const isReloadNewAPI = nav && typeof nav === 'object' && 'type' in nav
          ? nav.type === 'reload'
          : false;
        // Fallback (deprecated API): 1 === TYPE_RELOAD
        // @ts-ignore - legacy navigation API
        const isReloadLegacy = performance && performance.navigation
          ? performance.navigation.type === 1
          : false;
        const isReload = Boolean(isReloadNewAPI || isReloadLegacy);
        
        // Check if we're in a wipe transition FIRST (before anything renders)
        const isWipeNavigating = sessionStorage.getItem('wipe-navigating') === 'true';
        
        if (isWipeNavigating && !isReload) {
          document.documentElement.classList.add('wipe-transitioning');
          // Content visibility controlled via CSS on #app-content
          
          // CRITICAL: Force overlay and all page elements to proper state
          const style = document.createElement('style');
          style.id = 'wipe-transition-force';
          style.textContent = `
            /* Force overlay to be visible and full screen */
            html.wipe-transitioning #wipe-transition-overlay { 
              visibility: visible !important; 
              opacity: 1 !important;
            }
            html.wipe-transitioning .wipe-overlay { 
              transform: translateY(0%) !important;
              opacity: 1 !important;
            }
            /* Keep only app content hidden until wipe completes */
            html.wipe-transitioning #app-content {
              opacity: 0 !important;
            }
            /* Hide cursor */
            html.wipe-transitioning #custom-cursor { 
              opacity: 0 !important; 
              visibility: hidden !important; 
            }
          `;
          document.head.appendChild(style);
        } else if (isReload) {
          // Clear the flag on reload
          sessionStorage.removeItem('wipe-navigating');
        }

        // If this page provides a loader, control initial visibility
        if (HAS_LOADER) {
          if (isReload) {
            // Show simple curtain loader immediately via CSS
            document.documentElement.classList.add('is-reload');
          } else {
            // Not a reload: remove guard so content is visible
            const guard = document.getElementById('early-app-hide');
            if (guard) guard.remove();
          }
        }
        
        if (localStorage.getItem('hasVisited')) {
          document.documentElement.classList.add('has-visited');
        } else {
          document.documentElement.classList.add('needs-reveal');
        }
        
        // Handle View Transitions - prevent loader conflicts
        document.addEventListener('astro:before-preparation', () => {
          // Hide any loaders before transition starts
          const loader = document.getElementById('simple-curtain-loader');
          if (loader) {
            loader.style.display = 'none';
            document.body.classList.remove('overflow-hidden');
          }
        });
        
        document.addEventListener('astro:after-swap', () => {
          // Ensure body is properly reset after transition
          document.body.classList.remove('overflow-hidden');
          const loader = document.getElementById('simple-curtain-loader');
          if (loader && !loader.classList.contains('should-show')) {
            loader.style.display = 'none';
          }
          
          // Ensure cursor remains visible after navigation
          try {
            document.documentElement.classList.add('cursor-hidden');
          } catch (e) {}
        });
      } catch (e) {}
    </script>
  </head>
  <body class="bg-cream text-charcoal antialiased min-h-screen">
    <!-- Page-level components will render their own loaders if needed -->
    <CustomCursor />
    <WipeTransition />
    <div id="page-transition-overlay" class="fixed inset-0 z-50 bg-neutral-950 pointer-events-none transform origin-top"></div>
    <noscript><style>#page-transition-overlay{display:none !important}</style></noscript>
    {hasLoader && <SimpleCurtainLoader />}
    <div id="app-content">
      <slot />
    </div>

    <Footer />

    <script type="module" src={pageReveal}></script>
    <script type="module" src={smoothScroll}></script>
    <script type="module" src={bootAnimations}></script>
    <script type="module" src={wipeTransition}></script>
    <script type="module" src={disableTopPull}></script>
    <script type="module" src={navResume}></script>
    {hasLoader && <script type="module" src={bootSimpleCurtainLoader}></script>}
  </body>
</html>
